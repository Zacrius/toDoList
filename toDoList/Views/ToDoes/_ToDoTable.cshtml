@model IEnumerable<toDoList.Models.ToDo>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Completed?
        </th>
        <th>Created On</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {        
        <tr>
            <td>
                @if (!item.IsDone)
                {
                    @Html.DisplayFor(modelItem => item.Description)
                }
                else
                {
                    <div class="CompletedTask">@Html.DisplayFor(modelItem => item.Description)</div>
                }
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.IsDone, new { id = item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reminder)
            </td>
            <td>

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, @class = "ActiveDelete" })
            </td>
        </tr>        
    }

</table>

<script src="~/Custom_Scripts/AddCheckboxListener.js"></script>
<script src="~/Custom_Scripts/AjaxDeleteTask.js"></script>